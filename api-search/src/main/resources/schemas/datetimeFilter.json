{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "type": {
      "enum": [
        "datetime"
      ]
    },
    "before": {
      "type": "string",
      "format": "date-time"
    },
    "after": {
      "type": "string",
      "format": "date-time"
    },
    "relation":  {
      "description": "How the result time range relates to the query time range, e.g., return all datasets whose time range is within the given time range. Defaults to 'intersects'.",
      "enum": [
        "contains",
        "disjoint",
        "intersects",
        "within"
      ]
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": false
}
