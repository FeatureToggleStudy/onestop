{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Geometry",
  "description": "One geometry as defined by GeoJSON",
  "oneOf": [
    {
      "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/Point"
    },
    {
      "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/MultiPoint"
    },
    {
      "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/LineString"
    },
    {
      "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/MultiLineString"
    },
    {
      "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/Polygon"
    },
    {
      "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/MultiPolygon"
    }
  ],
  "definitions": {
    "Point": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Point"
          ]
        },
        "coordinates": {
          "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/position"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "MultiPoint": {
      "properties": {
        "type": {
          "enum": [
            "MultiPoint"
          ]
        },
        "coordinates": {
          "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/positionArray"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "LineString": {
      "properties": {
        "type": {
          "enum": [
            "LineString"
          ]
        },
        "coordinates": {
          "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/lineString"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "MultiLineString": {
      "properties": {
        "type": {
          "enum": [
            "MultiLineString"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/lineString"
          }
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "Polygon": {
      "properties": {
        "type": {
          "enum": [
            "Polygon"
          ]
        },
        "coordinates": {
          "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/polygon"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "MultiPolygon": {
      "properties": {
        "type": {
          "enum": [
            "MultiPolygon"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/polygon"
          }
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "position": {
      "description": "A single position",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": [
        {
          "type": "number",
          "minimum": -360,
          "maximum": 360
        },
        {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        }
      ],
      "additionalItems": false
    },
    "positionArray": {
      "description": "An array of positions",
      "type": "array",
      "items": {
        "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/position"
      }
    },
    "lineString": {
      "description": "An array of two or more positions",
      "allOf": [
        {
          "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/positionArray"
        },
        {
          "minItems": 2
        }
      ]
    },
    "linearRing": {
      "description": "An array of four positions where the first equals the last",
      "allOf": [
        {
          "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/positionArray"
        },
        {
          "minItems": 4
        }
      ]
    },
    "polygon": {
      "description": "An array of linear rings",
      "type": "array",
      "items": {
        "$ref": "file:src/main/resources/schema/components/geo.json#/definitions/linearRing"
      }
    }
  }
}
