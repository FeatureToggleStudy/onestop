{
  "name": "onestop-client",
  "version": "1.2.0",
  "description": "The web client for the OneStop discovery service",
  "repository": "ssh://git@github.com:cedardevs/onestop.git",
  "license": "GPL-2.0",
  "scripts": {
    "dev": "webpack-dev-server --progress --colors & npm run testAndWatch",
    "test": "NODE_ENV=test mocha --recursive ./test",
    "testAndWatch": "NODE_ENV=test mocha --recursive ./test -w --watch-extensions js,jsx",
    "format": "find src -name '*.js' -o -name '*.jsx' -o -name '*.css' | xargs ./node_modules/.bin/prettier --config .prettierrc.json --write",
    "build": "npm install && npm test && NODE_ENV=production ./node_modules/.bin/webpack -p",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "esri-leaflet": "^2.1.2",
    "esri-loader": "^1.5.3",
    "isomorphic-fetch": "^2.2.1",
    "leaflet": "^1.3.1",
    "leaflet-draw": "^0.4.13",
    "lodash": "^4.17.4",
    "moment": "^2.19.2",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-redux": "^5.0.6",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.8",
    "react-toggle-display": "^2.2.0",
    "redux": "^3.7.2",
    "redux-seamless-immutable": "^0.3.2",
    "redux-thunk": "^2.2.0",
    "redux-watch": "^1.1.1",
    "seamless-immutable": "^7.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.11.0",
    "eslint-loader": "^1.9.0",
    "fetch-mock": "^5.13.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "html-webpack-template": "^6.1.0",
    "json-loader": "^0.5.7",
    "mocha": "^4.0.1",
    "modernizr": "^3.5.0",
    "modernizr-loader": "^1.0.1",
    "nock": "^9.1.0",
    "path": "^0.12.7",
    "postcss-assets": "^5.0.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.9",
    "precss": "^2.0.0",
    "prettier-miscellaneous": "^1.5.3",
    "purecss": "^1.0.0",
    "react-css-modules": "^4.7.1",
    "redux-mock-store": "^1.3.0",
    "sinon": "^4.1.2",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  }
}
