{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "OneStop Search Request Schema",
  "description": "The shape of a search request body that can be sent to the OneStop API to execute a search.",

  "type": "object",
  "properties": {
    "queries": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/query"
      }
    },
    "filters": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/filter"
      }
    },
    "sort" : {
      "type": "string"
    },
    "page": {
      "type": "object",
      "properties": {
        "number": {
          "type": "integer"
        },
        "size": {
          "type": "integer"
        }
      }
    }
  },

  "definitions": {
    "query": {
      "oneOf": [
        {
          "$ref": "#/definitions/textQuery"
        }
      ]
    },
    "textQuery": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["queryText"]
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["type", "value"],
      "additionalProperties": false
    },

    "filter": {
      "oneOf": [
        {
          "$ref": "#/definitions/dateTimeFilter"
        },
        {
          "$ref": "#/definitions/facetFilter"
        },
        {
          "$ref": "#/definitions/geoPointFilter"
        },
        {
          "$ref": "#/definitions/boundingBoxFilter"
        }
      ]
    },
    "dateTimeFilter": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["datetime"]
        },
        "before": {
          "type": "string",
          "format": "date-time"
        },
        "after": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["type", "before", "after"],
      "additionalProperties": false
    },
    "facetFilter": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["facet"]
        },
        "name": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type", "name", "values"],
      "additionalProperties": false
    },
    "geoPointFilter": {
      "description": "Filter that returns results whose bounding geometry contains the specified geographical coordinate.",
      "type": "object",
      "properties": {
        "type": {
          "enum": ["geopoint"]
        },
        "coordinate": {
          "$ref": "#/definitions/coordinate"
        }
      },
      "required": ["type", "coordinate"],
      "additionalProperties": false
    },
    "boundingBoxFilter": {
      "description": "Filter that returns results whose bounding geometry relates to the given bounding box as specified.",
      "type": "object",
      "properties": {
        "type": {
          "enum": ["bbox"]
        },
        "topLeft": {
          "$ref": "#/definitions/coordinate"
        },
        "bottomRight": {
          "$ref": "#/definitions/coordinate"
        },
        "relation": {
          "description": "How the dataset geometry relates to the given bounding box, e.g., return all datasets whose geometry contains the given bounding box.",
          "enum": ["contains", "disjoint", "intersects", "within"]
        }
      },
      "required": ["type", "topLeft", "bottomRight", "relation"],
      "additionalProperties": false
    },

    "coordinate": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum" : 90
        },
        "lon": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      },
      "required": ["lat", "lon"],
      "additionalProperties": false
    }
  }
}